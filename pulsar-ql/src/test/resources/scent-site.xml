  </property>
  <property>
    <name>scent.block.extractors.label.PriceDetail</name>
    <value>TextExtractor</value>
  </property>
  -->
  <property>
    <name>scent.extract.greedy</name>
    <value>true</value>
    <description>All extractors are used to try to extract a page block</description>
  </property>

  <!-- builder -->
  <property>
    <name>scent.builder.build.order.by.category</name>
    <value>Title,ProductShow,ProductSpec,BigImage,Categories,PriceDetail,Captured,RegexExtracted,PreDefined,Candidate,Metadata,Gallery,ProductDetail,SimilarEntity</value>
  </property>

  <!-- wiki -->
  <property>
    <name>scent.wiki.domain</name>
    <value>wiki.qiwur.com</value>
  </property>
  <property>
    <name>scent.wiki.username</name>
    <value>galaxyeyebot</value>
  </property>
  <property>
    <name>scent.wiki.password</name>
    <value>ABC!@#</value>
  </property>
  <property>
    <name>scent.wiki.save</name>
    <value>true</value>
