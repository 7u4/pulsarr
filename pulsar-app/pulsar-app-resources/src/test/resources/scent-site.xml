<?xml version="1.0" ?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl" ?>

<!-- Put site-specific property overrides in this file. -->

<configuration>

  <property>
    <name>scent.domain</name>
    <value>product-baby</value>
  </property>

  <property>
    <name>scent.web.cache.file.expires</name>
    <value>0</value>
  </property>

  <!-- diagnose -->
  <property>
    <name>scent.diagnostor.enabled</name>
    <value>true</value>
  </property>
  <property>
    <name>scent.stat.segment.variance.log</name>
    <value>true</value>
  </property>

  <!-- classifier -->
  <property>
    <name>scent.classifier.block.labels</name>
    <!-- <value>Menu,Navigation,Description,Map,ShopPicture,Comment,SimilarShop</value> -->
    <value>ProductSpec,ProductShow,BigImage,PriceDetail,ProductDetail,ShopIntro,Areas,Comment,TitleContainer,Title,Categories,SimilarEntity,Menu,RelativeProduct,Metadata,CategoryList,BadBlock,DealHistory,Gallery</value>
    <description>Notice : do not split into lines</description>
  </property>

  <property>
    <name>scent.classifier.block.inheritable.labels</name>
    <value>Comment</value>
    <description>Notice : do not split into lines</description>
  </property>

  <!-- additional extractors -->
  <property>
    <name>scent.extract.greedy</name>
    <value>true</value>
    <description>All extractors are used to try to extract a page block</description>
  </property>

  <!-- builder -->
  <property>
    <name>scent.builder.build.order.by.category</name>
    <value>Title,ProductShow,ProductSpec,BigImage,Categories,PriceDetail,Captured,RegexExtracted,PreDefined,Candidate,Metadata,Gallery,ProductDetail,SimilarEntity</value>
  </property>

</configuration>
