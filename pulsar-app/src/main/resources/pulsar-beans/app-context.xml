<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd" default-lazy-init="true">

    <import resource="classpath:/pulsar-beans/components-context.xml" />

    <bean id="appMonitor" class="ai.platon.pulsar.AppMonitor" init-method="start" destroy-method="close" lazy-init="false">
        <constructor-arg ref="webDriverManager"/>
        <constructor-arg ref="proxyManager"/>
        <constructor-arg ref="conf"/>
    </bean>

</beans>
