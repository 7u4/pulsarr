<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} %-5p %c{2} (%F:%M(%L)) - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="ai.platon.pulsar" level="TRACE"/>
    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
