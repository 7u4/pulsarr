<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" default-lazy-init="true">

    <import resource="../common-context.xml"/>

    <bean id="protocolFactory" class="ai.platon.pulsar.crawl.protocol.ProtocolFactory" destroy-method="close">
        <constructor-arg ref="conf" />
    </bean>

    <bean id="browserControl" class="ai.platon.pulsar.protocol.browser.driver.WebDriverControl">
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="webDriverManager" class="ai.platon.pulsar.protocol.browser.driver.WebDriverManager" destroy-method="close">
        <constructor-arg ref="browserControl"/>
        <constructor-arg ref="proxyManagerFactory"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="browserPrivacyContextManager" class="ai.platon.pulsar.protocol.browser.driver.BrowserPrivacyContextManager">
        <constructor-arg ref="webDriverManager"/>
        <constructor-arg ref="proxyManagerFactory"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="browserEmulateEventHandler" class="ai.platon.pulsar.protocol.browser.driver.AmazonBrowserEmulateEventHandler">
        <constructor-arg ref="webDriverManager"/>
        <constructor-arg ref="messageWriter"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="browserEmulator" class="ai.platon.pulsar.protocol.browser.driver.BrowserEmulator" destroy-method="close">
        <constructor-arg ref="browserPrivacyContextManager"/>
        <constructor-arg ref="browserEmulateEventHandler"/>
        <constructor-arg ref="messageWriter"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="asyncBrowserEmulator" class="ai.platon.pulsar.protocol.browser.driver.async.AsyncBrowserEmulator" destroy-method="close">
        <constructor-arg ref="browserPrivacyContextManager"/>
        <constructor-arg ref="browserEmulateEventHandler"/>
        <constructor-arg ref="messageWriter"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="browserEmulatedFetcher" class="ai.platon.pulsar.protocol.browser.driver.BrowserEmulatedFetcher" destroy-method="close">
        <constructor-arg ref="browserPrivacyContextManager"/>
        <constructor-arg ref="browserEmulator"/>
        <constructor-arg ref="asyncBrowserEmulator"/>
        <constructor-arg ref="conf"/>
    </bean>

</beans>
