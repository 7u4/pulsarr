<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" default-lazy-init="true">

    <import resource="../common-context.xml"/>

    <bean id="opicScoringFilter" class="org.warps.pulsar.scoring.opic.OPICScoringFilter">
        <constructor-arg ref="conf"/>
    </bean>
    <bean id="scoringFilters" class="org.warps.pulsar.crawl.scoring.ScoringFilters">
        <constructor-arg>
            <list>
                <ref bean="opicScoringFilter" />
            </list>
        </constructor-arg>
        <constructor-arg ref="conf"/>
    </bean>

</beans>
