<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" default-lazy-init="true">

    <bean id="conf" class="ai.platon.pulsar.common.config.MutableConfig"/>

    <!--Web Page Database -->
    <bean id="webDb" class="ai.platon.pulsar.persist.WebDb" destroy-method="close">
        <constructor-arg ref="conf" />
    </bean>

    <!--System counters -->
    <bean id="metricsCounters" class="ai.platon.pulsar.common.MetricsCounters"/>

    <!--System metrics -->
    <bean id="metricsSystem" class="ai.platon.pulsar.common.MetricsSystem" destroy-method="close">
        <constructor-arg ref="webDb"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="fetchTaskTracker" class="ai.platon.pulsar.crawl.fetch.FetchTaskTracker" destroy-method="close">
        <constructor-arg ref="webDb"/>
        <constructor-arg ref="metricsSystem"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="fetchThreadExecutor" class="ai.platon.pulsar.common.FetchThreadExecutor" destroy-method="close">
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="browserControl" class="ai.platon.pulsar.net.browser.WebDriverControl">
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="proxyManagerFactory" class="ai.platon.pulsar.common.proxy.ProxyManagerFactory" init-method="start" destroy-method="close">
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="webDriverManager" class="ai.platon.pulsar.net.browser.WebDriverManager" destroy-method="close">
        <constructor-arg ref="browserControl"/>
        <constructor-arg ref="proxyManagerFactory"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="privacyContextManager" class="ai.platon.pulsar.net.browser.PrivacyContextManager">
        <constructor-arg ref="webDriverManager"/>
        <constructor-arg ref="proxyManagerFactory"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="browserEmulator" class="ai.platon.pulsar.net.browser.RobustBrowserEmulator" destroy-method="close">
        <constructor-arg ref="privacyContextManager"/>
        <constructor-arg ref="fetchTaskTracker"/>
        <constructor-arg ref="metricsSystem"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="browserEmulatedFetcher" class="ai.platon.pulsar.net.browser.BrowserEmulatedFetcher" destroy-method="close">
        <constructor-arg ref="privacyContextManager"/>
        <constructor-arg ref="fetchThreadExecutor"/>
        <constructor-arg ref="browserEmulator"/>
        <constructor-arg ref="conf"/>
    </bean>

</beans>
