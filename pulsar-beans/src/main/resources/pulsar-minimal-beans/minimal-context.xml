<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" default-lazy-init="true">

    <bean id="conf" class="ai.platon.pulsar.common.config.MutableConfig">
        <property name="environment" ref="environment"/>
    </bean>

    <bean id="metricsManagement" class="ai.platon.pulsar.common.MetricsManagement" destroy-method="close">
        <constructor-arg ref="metricsCounters"/>
        <constructor-arg ref="conf"/>
    </bean>

    <!--Web Page Database -->
    <bean id="webDb" class="ai.platon.pulsar.persist.WebDb" destroy-method="close">
        <constructor-arg ref="conf" />
    </bean>

    <!--System counters -->
    <bean id="metricsCounters" class="ai.platon.pulsar.common.MetricsCounters"/>

    <!--System metrics -->
    <bean id="messageWriter" class="ai.platon.pulsar.common.message.MiscMessageWriter" destroy-method="close">
        <constructor-arg ref="webDb"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="protocolFactory" class="ai.platon.pulsar.crawl.protocol.ProtocolFactory" destroy-method="close">
        <constructor-arg ref="conf" />
    </bean>

    <bean id="globalCacheManager" class="ai.platon.pulsar.crawl.GlobalCacheManager">
        <constructor-arg ref="conf"/>
    </bean>


    <bean id="fetchComponent" class="ai.platon.pulsar.crawl.component.BatchFetchComponent" destroy-method="close">
        <constructor-arg ref="webDb"/>
        <constructor-arg ref="protocolFactory"/>
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="parseComponent" class="ai.platon.pulsar.crawl.component.ParseComponent">
        <constructor-arg ref="conf"/>
    </bean>

    <bean id="loadComponent" class="ai.platon.pulsar.crawl.component.LoadComponent" destroy-method="close">
        <constructor-arg ref="webDb"/>
        <constructor-arg ref="fetchComponent"/>
        <constructor-arg ref="parseComponent"/>
        <constructor-arg ref="conf"/>
    </bean>

</beans>
